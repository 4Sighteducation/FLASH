{
  "framework": null,
  "installCommand": "npm install --production=false",
  "buildCommand": "echo 'No build needed for API functions'",
  "outputDirectory": ".",
  "functions": {
    "api/generate-cards.js": {
      "maxDuration": 30
    },
    "api/transcribe-audio.js": {
      "maxDuration": 30
    },
    "api/analyze-answer.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
} 