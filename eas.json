{
  "cli": {
    "version": ">= 5.0.0",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": true
      },
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "ios": {},
      "android": {
        "buildType": "app-bundle"
      },
      "env": {
        "EXPO_DEBUG": "true",
        "CI": "false"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "tony@vespa.academy"
      },
      "android": {
        "serviceAccountKeyPath": "./google-play-service-account.json",
        "track": "internal"
      }
    }
  }
} 